<div class="modal fade" id="startNewRecord" tabindex="-1" role="dialog" aria-labelledby="startNewRecordLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Start A New EDRS Test Record</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="formGroupExampleInput">Name of EDRS system</label>
            <input type="text" class="form-control" id="name" placeholder="" required>
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput2">Notes</label>
            <textarea type="text" class="form-control" id="notes" placeholder=""></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </div>
  </div>
</div>
